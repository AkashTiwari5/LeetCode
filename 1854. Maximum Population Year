from typing import List

class Solution:
    def maximumPopulation(self, logs: List[List[int]]) -> int:
        # Years range in the problem (1950..2050)
        START, END = 1950, 2050
        diff = [0] * (END - START + 2)  # +2 so index END - START + 1 is safe for diff[d] decrement

        # build difference array
        for birth, death in logs:
            diff[birth - START] += 1
            diff[death - START] -= 1  # death year is not counted

        # prefix sum and find max
        max_pop = -1
        best_year = START
        curr = 0
        for i in range(0, END - START + 1):  # iterate years 1950..2050
            curr += diff[i]
            year = START + i
            if curr > max_pop:
                max_pop = curr
                best_year = year

        return best_year
