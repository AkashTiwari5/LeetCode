from collections import defaultdict

class Solution:
    def groupAnagrams(self, strs):
        anagrams = defaultdict(list)
        
        for word in strs:
            count = [0] * 26  # For 'a' to 'z'
            for char in word:
                count[ord(char) - ord('a')] += 1
            anagrams[tuple(count)].append(word)
        
        return list(anagrams.values())
